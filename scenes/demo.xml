<SCENE>
    <!-- Initial values -->
    <INITIALS>
        <frustum near="0.1" far="500" />
        <translation x="0" y="0" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="0.2" sy="0.2" sz="0.2" />
        <reference length="0" />
    </INITIALS>
    <!-- Illumination and clear colour -->
    <ILLUMINATION>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ILLUMINATION>
    <!-- Lights -->
    <LIGHTS>
        <LIGHT id="light0">
            <enable value="1" />
            <position x="0" y="10" z="0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
        <LIGHT id="light1">
            <enable value="1" />
            <position x="30" y="10" z="0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
        <LIGHT id="light2">
            <enable value="1" />
            <position x="0" y="10" z="20" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
        <LIGHT id="light3">
            <enable value="1" />
            <position x="30" y="10" z="20" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
    </LIGHTS>
    <!-- Textures -->
    <TEXTURES>
        <!-- Tree trunk -->
        <TEXTURE id="trunk">
            <file path="images/trunk-image.jpg" />
            <amplif_factor s="2" t="2" />
        </TEXTURE>

        <TEXTURE id="pvpButton">
            <file path="images/pvp.png" />
            <amplif_factor s="2" t="1" />
        </TEXTURE>

        <TEXTURE id="pveButton">
            <file path="images/pve.png" />
            <amplif_factor s="2" t="1" />
        </TEXTURE>

        <TEXTURE id="eveButton">
            <file path="images/eve.png" />
            <amplif_factor s="2" t="1" />
        </TEXTURE>

        <TEXTURE id="menuPanel">
            <file path="images/menuPanel.png" />
            <amplif_factor s="20" t="20" />
        </TEXTURE>

        <TEXTURE id="dif0">
            <file path="images/dif0.png" />
            <amplif_factor s="20" t="20" />
        </TEXTURE>

        <TEXTURE id="dif1">
            <file path="images/dif1.png" />
            <amplif_factor s="20" t="20" />
        </TEXTURE>

        <TEXTURE id="dif2">
            <file path="images/dif2.png" />
            <amplif_factor s="20" t="20" />
        </TEXTURE>

        <TEXTURE id="dif3">
            <file path="images/dif3.png" />
            <amplif_factor s="20" t="20" />
        </TEXTURE>

        <TEXTURE id="playButton">
            <file path="images/playButton.png" />
            <amplif_factor s="20" t="20" />
        </TEXTURE>
    </TEXTURES>
    <MATERIALS>
        <!-- A default material -->
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.4" g="0.4" b="0.4" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <!-- Birch material -->
        <MATERIAL id="birch">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.781" g="0.6289" b="0.46875" a="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <!-- Spruce material -->
        <MATERIAL id="spruce">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.3125" g="0.16" b="0" a="1" />
            <ambient r="0" g="0" b="0" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <!-- Oak material -->
        <MATERIAL id="oak">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.5859375" g="0.43359375" b="0.19921875" a="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>                                 
    </MATERIALS>
    <!-- The animations -->
    <ANIMATIONS>
        <ANIMATION id="ss" speed="3" type="linear">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="0" yy="10" zz="0" />
            <controlpoint xx="0" yy="10" zz="17" />
            <controlpoint xx="4" yy="2" zz="17" />
        </ANIMATION>
        <ANIMATION id="ss1" speed="3" type="circular" centerx="1" centery="1" centerz="1" radius="10" startang="40" rotang="360" />
        <ANIMATION id="ss2" speed="7" type="bezier">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="5" yy="5" zz="5" />
            <controlpoint xx="10.5" yy="0" zz="7" />
            <controlpoint xx="-10.5" yy="5" zz="20" />
        </ANIMATION>
        <ANIMATION id="ss3" type="combo">
            <SPANREF id="ss" />
        </ANIMATION> -->
    </ANIMATIONS>
    <!-- The nodes -->
    <NODES>
        <ROOT id="menu" />
        <!-- The root node -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="null" />
            <!-- <TRANSLATION x="5" y="1" z="5" /> -->
            <DESCENDANTS>
                <NODEREF id="board" />
            </DESCENDANTS>
        </NODE>


        <!-- Plain piece -->

        <NODE id="plainPiece">
            <MATERIAL id="spruce" />
            <TEXTURE id="null" />
            <ROTATION axis="x" angle="-90" />
            <DESCENDANTS>
                <LEAF type="cylinder" args="0.6 1.25 1.25 10 20 1 1" />
            </DESCENDANTS>
        </NODE>

        <!-- Holed piece -->

        <NODE id="holedPiece">
            <MATERIAL id="birch" />
            <TEXTURE id="null" />
            <ROTATION axis="x" angle="-90" />
            <DESCENDANTS>
                <LEAF type="torus" args="0.6 0.51666 1.25 20 20" />
                <LEAF type="cylinder" args="0 0.51666 1.25 10 20 0 0" />
                <NODEREF id="holedPieceCap" />
            </DESCENDANTS>
        </NODE>

        <NODE id="holedPieceCap">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0" z="0.6" />
            <DESCENDANTS>
                <LEAF type="cylinder" args="0 1.25 0.51666 10 20 0 0" />
            </DESCENDANTS>
        </NODE>

        <!-- Dual piece -->

        <NODE id="dualPiece">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <DESCENDANTS>
                <NODEREF id="holedPieceTop" />
                <NODEREF id="plainPiece" />
            </DESCENDANTS>
        </NODE>
        
        <NODE id="holedPieceTop">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0.6" z="0" />
            <DESCENDANTS>
                <NODEREF id="holedPiece" />
            </DESCENDANTS>
        </NODE>

        <!-- Cube -->

        <NODE id="cube">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0.5" y="0.5" z="0.5" />
            <DESCENDANTS>
                <NODEREF id="cubeFace1" />
                <NODEREF id="cubeFace2" />
                <NODEREF id="cubeFace3" />
                <NODEREF id="cubeFace4" />
                <NODEREF id="cubeFace5" />
                <NODEREF id="cubeFace6" />
            </DESCENDANTS>
        </NODE>

        <NODE id="cubeFace1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <DESCENDANTS>
                <NODEREF id="rectangle" />
            </DESCENDANTS>
        </NODE>
        <NODE id="cubeFace2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <ROTATION axis="x" angle="90" />
            <DESCENDANTS>
                <NODEREF id="rectangle" />
            </DESCENDANTS>
        </NODE>
         <NODE id="cubeFace3">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <ROTATION axis="x" angle="180" />
            <DESCENDANTS>
                <NODEREF id="rectangle" />
            </DESCENDANTS>
        </NODE>
        <NODE id="cubeFace4">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <ROTATION axis="x" angle="270" />
            <DESCENDANTS>
                <NODEREF id="rectangle" />
            </DESCENDANTS>
        </NODE>
        <NODE id="cubeFace5">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <ROTATION axis="y" angle="90" />
            <DESCENDANTS>
                <NODEREF id="rectangle" />
            </DESCENDANTS>
        </NODE>
        <NODE id="cubeFace6">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <ROTATION axis="y" angle="-90" />
            <DESCENDANTS>
                <NODEREF id="rectangle" />
            </DESCENDANTS>
        </NODE>

        <NODE id="rectangle">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="-0.5" y="-0.5" z="0.5" />
            <DESCENDANTS>
                <LEAF type="rectangle" args="0 1 1 0" />
            </DESCENDANTS>
        </NODE>

        <!-- Board -->

        <NODE id="board">
            <MATERIAL id="oak" />
            <TEXTURE id="null" />
            <DESCENDANTS>
                <NODEREF id="boardBottom" />
                <NODEREF id="bars" />
                <NODEREF id="barsVertical" />
            </DESCENDANTS>
        </NODE>
        
        <NODE id="boardBottom">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <SCALE sx="15" sy="1.1" sz="15" />
            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>

        <NODE id="barsVertical">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0" z="15" />
            <ROTATION axis="y" angle="90" />
            <TRANSLATION x="0.001" y="0" z="0" />          
            <SCALE sx="0.999" sy="0.999" sz="1" />
            <DESCENDANTS>
                <NODEREF id="bars" />
            </DESCENDANTS>
        </NODE>

        <NODE id="bars">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="1.1" z="0" />
            <DESCENDANTS>
                <NODEREF id="bar1" />
                <NODEREF id="bar2" />
                <NODEREF id="bar3" />
                <NODEREF id="bar4" />
                <NODEREF id="bar5" />
            </DESCENDANTS>
        </NODE>

        <NODE id="bar1">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <DESCENDANTS>
                <NODEREF id="bar" />
            </DESCENDANTS>
        </NODE>

        <NODE id="bar2">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0" z="3.54" />
            <DESCENDANTS>
                <NODEREF id="bar" />
            </DESCENDANTS>
        </NODE>        

        <NODE id="bar3">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0" z="7.08" />
            <DESCENDANTS>
                <NODEREF id="bar" />
            </DESCENDANTS>
        </NODE>        

        <NODE id="bar4">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0" z="10.62" />
            <DESCENDANTS>
                <NODEREF id="bar" />
            </DESCENDANTS>
        </NODE>        

        <NODE id="bar5">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0" z="14.16" />
            <DESCENDANTS>
                <NODEREF id="bar" />
            </DESCENDANTS>
        </NODE>                

        <NODE id="bar">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <SCALE sx="15" sy="1.2" sz="0.84" />
            <DESCENDANTS>
                <NODEREF id="cube" />
            </DESCENDANTS>
        </NODE>                                

         <NODE id="menu">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="20" z="0" />
            <ROTATION axis="y" angle="-45" />
            <ROTATION axis="z" angle="90" />
             
            <DESCENDANTS>
                <NODEREF id="buttonAIDiff0" />
                <NODEREF id="buttonAIDiff1" />
                <NODEREF id="buttonAIDiff2" />
                <NODEREF id="buttonAIDiff3" />
                <NODEREF id="buttonGameType0" />
                <NODEREF id="buttonGameType1" />
                <NODEREF id="buttonGameType2" />
                <NODEREF id="buttonStartGame" />
                <NODEREF id="menuPanel" />
            </DESCENDANTS>
        </NODE>     

        <NODE id="buttonAIDiff0" pickingID="21">
            <MATERIAL id="null" />
            <TEXTURE id="dif0" />
            <TRANSLATION x="0" y="-3" z="5.5" />
            <DESCENDANTS>
              <NODEREF id="button" />
            </DESCENDANTS>
        </NODE>     

        <NODE id="buttonAIDiff1" pickingID="22">
            <MATERIAL id="null" />
            <TEXTURE id="dif1" />
            <TRANSLATION x="0" y="-3" z="2.5" />
            <DESCENDANTS>
               <NODEREF id="button" />
            </DESCENDANTS>
        </NODE>     

        <NODE id="buttonAIDiff2" pickingID="23">
            <MATERIAL id="null" />
            <TEXTURE id="dif2" />
            <TRANSLATION x="0" y="-3" z="-0.5" />
            <DESCENDANTS>
              <NODEREF id="button" />
            </DESCENDANTS>
        </NODE>     

        <NODE id="buttonAIDiff3" pickingID="24">
            <MATERIAL id="null" />
            <TEXTURE id="dif3" />
            <TRANSLATION x="0" y="-3" z="-3.5" />
            <DESCENDANTS>
              <NODEREF id="button" />
            </DESCENDANTS>
        </NODE>     

        <NODE id="buttonGameType0" pickingID="11">
            <MATERIAL id="null" />
            <TEXTURE id="pvpButton" />
            <TRANSLATION x="0" y="2" z="4" />
            <DESCENDANTS>
              <NODEREF id="button" />
            </DESCENDANTS>
        </NODE>     

        <NODE id="buttonGameType1" pickingID="12">
            <MATERIAL id="null" />
            <TEXTURE id="pveButton" />
            <TRANSLATION x="0" y="2" z="1" />
            <DESCENDANTS>
              <NODEREF id="button" />
            </DESCENDANTS>
        </NODE>     

        <NODE id="buttonGameType2" pickingID="13">
            <MATERIAL id="null" />
            <TEXTURE id="eveButton" />
            <TRANSLATION x="0" y="2" z="-2" />
            <DESCENDANTS>
              <NODEREF id="button" />
            </DESCENDANTS>
        </NODE>     

        <NODE id="buttonStartGame" pickingID="1">
            <MATERIAL id="null" />
            <TEXTURE id="playButton" />
            <TRANSLATION x="0" y="-7" z="1" />
            <DESCENDANTS>
              <NODEREF id="button" />
            </DESCENDANTS>
        </NODE>

        <NODE id="button">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <ROTATION axis="y" angle="180" />
            <ROTATION axis="x" angle="-90" />
            <DESCENDANTS>
                <LEAF type="sphere" args="1 10 10" />
            </DESCENDANTS>
        </NODE>

        <NODE id="menuPanel">
            <MATERIAL id="null" />
            <TEXTURE id="menuPanel" />
            <ROTATION axis="y" angle="90" />
            <DESCENDANTS>
                <LEAF type="rectangle" args="-10 10 10 -10" />
            </DESCENDANTS>
        </NODE>
            
    </NODES>

    
</SCENE>