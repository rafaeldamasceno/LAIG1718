<SCENE>
    <!-- Initial values -->
    <INITIALS>
        <frustum near="0.1" far="500" />
        <translation x="0" y="0" z="0" />
        <rotation axis="x" angle="0" />
        <rotation axis="y" angle="0" />
        <rotation axis="z" angle="0" />
        <scale sx="0.2" sy="0.2" sz="0.2" />
        <reference length="10" />
    </INITIALS>
    <!-- Illumination and clear colour -->
    <ILLUMINATION>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ILLUMINATION>
    <!-- Lights -->
    <LIGHTS>
        <LIGHT id="light0">
            <enable value="1" />
            <position x="0" y="10" z="0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
        <LIGHT id="light1">
            <enable value="1" />
            <position x="30" y="10" z="0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
        <LIGHT id="light2">
            <enable value="1" />
            <position x="0" y="10" z="20" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
        <LIGHT id="light3">
            <enable value="1" />
            <position x="30" y="10" z="20" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </LIGHT>
    </LIGHTS>
    <!-- Textures -->
    <TEXTURES>
        <!-- Tree trunk -->
        <TEXTURE id="trunk">
            <file path="images/trunk-image.jpg" />
            <amplif_factor s="2" t="2" />
        </TEXTURE>
    </TEXTURES>
    <MATERIALS>
        <!-- A default material -->
        <MATERIAL id="defaultMaterial">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <ambient r="0.4" g="0.4" b="0.4" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <!-- Birch material -->
        <MATERIAL id="birch">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.781" g="0.6289" b="0.46875" a="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>
        <!-- Spruce material -->
        <MATERIAL id="spruce">
            <shininess value="1" />
            <specular r="0.0" g="0.0" b="0.0" a="1" />
            <diffuse r="0.3125" g="0.16" b="0" a="1" />
            <ambient r="0" g="0" b="0" a="1" />
            <emission r="0.0" g="0.0" b="0.0" a="1" />
        </MATERIAL>                  
    </MATERIALS>
    <!-- The animations -->
    <ANIMATIONS>
        <ANIMATION id="ss" speed="3" type="linear">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="0" yy="10" zz="0" />
            <controlpoint xx="0" yy="10" zz="17" />
            <controlpoint xx="4" yy="2" zz="17" />
        </ANIMATION>
        <ANIMATION id="ss1" speed="3" type="circular" centerx="1" centery="1" centerz="1" radius="10" startang="40" rotang="360" />
        <ANIMATION id="ss2" speed="7" type="bezier">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="5" yy="5" zz="5" />
            <controlpoint xx="10.5" yy="0" zz="7" />
            <controlpoint xx="-10.5" yy="5" zz="20" />
        </ANIMATION>
        <ANIMATION id="ss3" type="combo">
            <SPANREF id="ss" />
        </ANIMATION> -->
    </ANIMATIONS>
    <!-- The nodes -->
    <NODES>
        <ROOT id="root" />
        <!-- The root node -->
        <NODE id="root">
            <MATERIAL id="defaultMaterial" />
            <TEXTURE id="null" />
            <TRANSLATION x="5" y="1" z="5" />
            <DESCENDANTS>
                <NODEREF id="dualPiece" />
            </DESCENDANTS>
        </NODE>


        <!-- Plain piece -->

        <NODE id="plainPiece">
            <MATERIAL id="spruce" />
            <TEXTURE id="null" />
            <ROTATION axis="x" angle="-90" />
            <DESCENDANTS>
                <LEAF type="cylinder" args="0.6 1.25 1.25 10 20 1 1" />
            </DESCENDANTS>
        </NODE>

        <!-- Holed piece -->

        <NODE id="holedPiece">
            <MATERIAL id="birch" />
            <TEXTURE id="null" />
            <ROTATION axis="x" angle="-90" />
            <DESCENDANTS>
                <LEAF type="torus" args="0.6 0.51666 1.25 20 20" />
                <LEAF type="cylinder" args="0 0.51666 1.25 10 20 0 0" />
                <NODEREF id="holedPieceCap" />
            </DESCENDANTS>
        </NODE>

        <NODE id="holedPieceCap">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0" z="0.6" />
            <DESCENDANTS>
                <LEAF type="cylinder" args="0 1.25 0.51666 10 20 0 0" />
            </DESCENDANTS>
        </NODE>

        <!-- Dual piece -->

        <NODE id="dualPiece">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <DESCENDANTS>
                <NODEREF id="holedPieceTop" />
                <NODEREF id="plainPiece" />
            </DESCENDANTS>
        </NODE>
        
        <NODE id="holedPieceTop">
            <MATERIAL id="null" />
            <TEXTURE id="null" />
            <TRANSLATION x="0" y="0.6" z="0" />
            <DESCENDANTS>
                <NODEREF id="holedPiece" />
            </DESCENDANTS>
        </NODE>                     

    </NODES>
</SCENE>